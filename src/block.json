{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "smark/text-slicer",
  "version": "0.1.0",
  "title": "Text Slicer",
  "category": "text",
  "icon": "smiley",
  "description": "Applies a slice effect to text.",
  "supports": {
    "html": false,
    "align": true,
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "padding": true,
      "margin": false
    }
  },
  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#000000",
          "text": "#C23A2B"
        }
      }
    },
    "align": {
      "type": "string",
      "default": "none"
    },
    "textinput": {
      "type": "string",
      "default": "Sliced Onion",
      "source": "text",
      "selector": "div div"
    },
    "textalign": {
      "type": "string",
      "default": "center"
    },
    "boxwidth": {
      "type": "number",
      "default": 52
    },
    "fontsize": {
      "type": "number",
      "default": 7
    }
  },
  "styles": [
    {
      "name": "rounded",
      "label": "Rounded"
    },
    {
      "name": "squared",
      "label": "Squared",
      "isDefault": true
    }
  ],
  "example": {
    "attributes": {
      "textinput": "Sliced Onion",
      "fontsize": 7
    }
  },
  "textdomain": "smark",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "script": "file:./script.js"
}
